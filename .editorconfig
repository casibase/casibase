# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Frontend files: JavaScript, JSX, TypeScript, TSX
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# CSS, LESS, SCSS files
[*.{css,less,scss}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Go files use tabs (Go convention)
[*.go]
indent_style = tab
indent_size = 4

# Makefiles must use tabs
[Makefile]
indent_style = tab
